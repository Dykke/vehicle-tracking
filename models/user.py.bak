    def to_dict(self):
        return {
            'id': self.id,
            'driver_id': self.driver_id,
            'vehicle_id': self.vehicle_id,
            'action': self.action,
            'meta_data': self.meta_data,
            'created_at': self.created_at.isoformat() if self.created_at else None
